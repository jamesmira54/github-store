<div class="flex gap-4">
    <div class="grid grid-cols-2 gap-2 w-max max-h-[200px]">
    {% for image in product.images %}
        {% assign index = forloop.index0 %}
        <img 
        height="100%"
        width="100%"
        src="{{ image | image_url: width: 100 }}"
        alt="Thumbnail"
        class="w-16 h-[95px] object-contain border rounded cursor-pointer thumbnail hover:ring-2 hover:ring-blue-500"
        data-index="{{ index }}"
        data-full="{{ image | image_url: width: 1000 }}"
        >
    {% endfor %}
    </div>

    <!-- Main Image with Nav Buttons -->
    <div class="relative block max-h-[505px]">
        <img
            height="100%"
            width="100%"
            id="main-product-image"
            src="{{ product.featured_image | image_url: width: 1000 }}"
            alt="{{ product.title }}"
            class="w-[400px] object-cover max-h-[530px] rounded-xl transition-transform duration-200 group-hover:scale-105 cursor-zoom-in"
        >
    </div>
</div>