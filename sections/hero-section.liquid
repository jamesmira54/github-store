<section class="relative h-[75vh] flex items-center justify-center text-center text-white overflow-hidden">
    {% if section.settings.background_image %}
        <img 
            width="100%"
            height="100%"
            src="{{ section.settings.background_image | image_url: width: 1920 }}" 
            alt="Hero Background" 
            class="absolute inset-0 w-full h-full object-cover z-0"
            loading="lazy"
        >
        <div class="absolute inset-0 bg-black/40 z-10"></div>
    {% endif %}

    <div class="z-20 max-w-2xl px-4 flex flex-col gap-3 justify-center items-center text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ section.settings.heading }}</h1>
        <p class="text-lg md:text-xl mb-6">{{ section.settings.subheading }}</p>
        <a href="{{ section.settings.button_url }}" class="inline-block w-[180px] bg-orange-600 text-white font-semibold px-6 py-3 rounded hover:bg-red-600 transition">
        {{ section.settings.button_text }}
        </a>
    </div>
</section>


{% schema %}
{
    "name": "Hero Banner",
    "tag": "section",
    "class": "block relative bg-white",
    "settings": [
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Welcome to Our Store"
        },
        {
            "type": "textarea",
            "id": "subheading",
            "label": "Subheading",
            "default": "Discover our latest products and offers."
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button URL",
            "default": "/collections/all"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Shop Now"
        }
    ],
    "presets": [
        {
        "name": "Hero Banner"
        }
    ]
}
{% endschema %}