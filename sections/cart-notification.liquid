<cart-notification section-id="{{ section.id }}" class="fixed top-6 right-6 z-50 hidden opacity-0 translate-y-4 transition-all duration-300 ease-in-out">
  <div class="relative bg-white shadow-xl rounded-lg border border-gray-200 max-w-sm w-full p-4 space-y-4">
    <p>Added to Cart!</p>
    <button class="cart-notification__close absolute top-2 right-2 text-gray-500 hover:text-black text-xl" aria-label="Close">
      ✕
    </button>

    {% assign item = cart.items.last %}
    {% if item %}
      <div class="flex items-center gap-4">
        <img width="100%" height="100%" src="{{ item.image | image_url: width: 100 }}" alt="{{ item.title }}" class="w-16 h-16 object-cover rounded">
        <div class="space-y-1">
          <p class="text-sm font-medium text-gray-900">{{ item.title }}</p>
          <p class="text-sm text-gray-600">
            {{ item.final_line_price | money }} × {{ item.quantity }}
          </p>
        </div>
      </div>

      <div class="flex justify-between gap-2">
        <a href="/cart" class="w-1/2 text-center bg-gray-200 hover:bg-gray-300 text-sm text-gray-800 font-semibold py-2 px-3 rounded">
          View Cart
        </a>
        <a href="/checkout" class="w-1/2 text-center bg-black hover:bg-gray-900 text-sm text-white font-semibold py-2 px-3 rounded">
          Checkout
        </a>
      </div>
    {% endif %}
  </div>
</cart-notification>

{% schema %}
{
  "name": "Cart Notification",
  "tag": "section",
  "class": "cart-notification-section"
}
{% endschema %}
